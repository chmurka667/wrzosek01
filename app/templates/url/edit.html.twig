{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.url_edit'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.url_edit'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_row(form.email, {
        label: {{ 'label.email'|trans }}
    }) }}
    {{ form_row(form.original_url, {
        label: {{ 'label.original_url'|trans }}
    }) }}
    {{ form_row(form.shortened_url, {
        label: {{ 'label.shortened_url'|trans }}
    }) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('url_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}