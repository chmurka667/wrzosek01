{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.url_create'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.url_create'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_row(form.email, {
        label: 'email'
    }) }}
    {{ form_row(form.original_url, {
        label: 'original_url'
    }) }}
    {{ form_row(form.tags, {
        label: 'tags'
    }) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('url_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form)}}

{% endblock %}